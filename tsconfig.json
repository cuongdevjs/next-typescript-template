{
  "compilerOptions": {
    "baseUrl": ".",
    "importHelpers": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    // "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      // "@panoee-studio-v2/*": ["../../panoee-studio-v2/app/*"],
      "@assets/*": [
        "./assets/*"
      ],
      "@scripts/*": [
        "./scripts/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@containers/*": [
        "./containers/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@type/*": [
        "type/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@server/*": [
        "./server/*"
      ],
      "@styles/*": [
        "./styles/*"
      ]
      // "@node_modules/*": [
      //   "node_modules/*"
      // ]
    },
    "strict": false,
    "incremental": true
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "next.config.js",
    ".babelrc",
    "bundles",
    "coverage",
    "test/*",
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
